{
    "name": "ist/real-estate",
    "description": "IST Real Estate Management System",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "phpoffice/phpspreadsheet": "^1.28",
        "dompdf/dompdf": "^2.0",
        "vlucas/phpdotenv": "^5.5",
        "paragonie/random_compat": "^2.0",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyze",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
